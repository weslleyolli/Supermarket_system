PRINTER_PORT=COM2
PAYMENT_TERMINAL_ENABLED=false

# Application Settings
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24

# API Configuration
API_V1_STR=/api/v1
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
